<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPedido"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="2dp"
    android:elevation="2dp"
    card_view:cardCornerRadius="2dp">

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dragEdge="left"
        app:mode="normal">

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="wrap_content"
            android:layout_height="110dp"
            android:background="#ffcc0000">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/white"
                    android:id="@+id/edit_layout"
                    android:text="Editar" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@android:color/holo_red_dark"
                    android:textColor="@android:color/white"
                    android:id="@+id/delete_layout"
                    android:text="Anular"/>
            </LinearLayout>
        </FrameLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/principal"
            android:background="@color/icons">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="?attr/listPreferredItemHeight"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <py.com.ideasweb.perseo.ui.elements.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/text_normal"
                    android:text="11/11/2017"
                    android:id="@+id/fecha"
                    />


                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        app:layout_heightPercent="100%"
                        app:layout_widthPercent="85%"
                        android:layout_marginRight="3dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <py.com.ideasweb.perseo.ui.elements.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/primary_text"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:text="Factura Nro.:"
                                android:layout_marginRight="5dp"
                                />

                            <py.com.ideasweb.perseo.ui.elements.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/secondary_text"
                                android:textSize="15dp"
                                android:id="@+id/nro"
                                android:text="000"
                                />

                        </LinearLayout>



                        <py.com.ideasweb.perseo.ui.elements.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/primary_text"
                            android:textSize="16dp"
                            android:id="@+id/documento"
                            android:layout_marginTop="5dp"
                            android:text="4800301-8"
                            />
                        <py.com.ideasweb.perseo.ui.elements.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:lines="1"
                            android:ellipsize="end"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="16dp"
                            android:text="Jaime Dario Ferreira Medina "
                            android:id="@+id/cliente"
                            />




                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layout_marginRight="5dp">


                            <py.com.ideasweb.perseo.ui.elements.MyTextView
                                android:id="@+id/anulado"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="ANULADO"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="5dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/error"/>

                            <py.com.ideasweb.perseo.ui.elements.MyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="10dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/text_form"
                                android:text="Gs. 1.000.000"
                                android:id="@+id/monto"
                                android:textStyle="bold"
                                />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        app:layout_heightPercent="85%"
                        app:layout_widthPercent="15%"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        >


                        <net.steamcrafted.materialiconlib.MaterialIconView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:materialIcon="eye"
                            android:id="@+id/ver"
                            app:materialIconSize="24dp"
                            android:layout_marginTop="5dp"
                            app:materialIconColor="@color/colorlink"
                            android:gravity="center"/>




                    </LinearLayout>

                </android.support.percent.PercentRelativeLayout>



            </RelativeLayout>
        </FrameLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</android.support.v7.widget.CardView>