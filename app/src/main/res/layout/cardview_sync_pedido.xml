<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvPedido"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:layout_margin="2dp"
    android:elevation="2dp"
    style="@style/card_iron_ligth">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="?attr/listPreferredItemHeight"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >


        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layout_heightPercent="100%"
                app:layout_widthPercent="70%"
                android:layout_marginRight="3dp"
                android:layout_height="match_parent">

                <py.com.ideasweb.perseo.ui.elements.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_form"
                    android:text="Jaime Dario Ferreira Medina "
                    android:id="@+id/csp_descripcion"
                    />
                <py.com.ideasweb.perseo.ui.elements.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/primary_text"
                    android:textSize="17dp"
                    android:id="@+id/csp_nro"
                    android:text="000-000-1234567"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp">

                    <py.com.ideasweb.perseo.ui.elements.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/text_normal"
                        android:text="11/11/2017"
                        android:id="@+id/csp_fecha"
                        />

                    <py.com.ideasweb.perseo.ui.elements.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/text_form"
                        android:text="Gs. 1.000.000"
                        android:id="@+id/csp_monto"
                        android:textStyle="bold"
                        />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                app:layout_heightPercent="100%"
                app:layout_widthPercent="30%"
                android:gravity="center"
                android:layout_alignParentRight="true">



                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"/>

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:materialIcon="delete"
                    android:id="@+id/csp_delete"
                    app:materialIconSize="20dp"
                    app:materialIconColor="@color/red_error"
                    android:gravity="center"/>




            </LinearLayout>

        </android.support.percent.PercentRelativeLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>