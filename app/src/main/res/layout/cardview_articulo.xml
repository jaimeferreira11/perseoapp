<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="2dp"
    android:elevation="2dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="?attr/listPreferredItemHeight"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >


        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_widthPercent="20%"
                    android:id="@+id/ca_image"
                    android:layout_margin="2dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/no_img"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_heightPercent="100%"
                app:layout_widthPercent="80%"
                android:id="@+id/pedido"
                android:layout_toRightOf="@id/ca_image"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <py.com.ideasweb.perseo.ui.elements.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_form"
                    android:visibility="gone"
                    android:id="@+id/ca_iva"
                    />

                <py.com.ideasweb.perseo.ui.elements.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="16dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/ca_descripion"
                    android:text=""

                    />
                <py.com.ideasweb.perseo.ui.elements.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    android:textSize="14dp"
                    android:id="@+id/ca_codigobarra"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:text=""/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <py.com.ideasweb.perseo.ui.elements.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:id="@+id/ca_precio"
                        android:gravity="center"
                        android:text=""/>

                    <py.com.ideasweb.perseo.ui.elements.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:id="@+id/ca_moneda"
                        android:gravity="center"
                        android:text=""/>

                    <py.com.ideasweb.perseo.ui.elements.MyTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:id="@+id/ca_id"
                        android:visibility="gone"
                        android:gravity="center"
                        android:text=""/>



                </LinearLayout>


            </LinearLayout>


