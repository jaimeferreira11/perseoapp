<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MiBotonRaised" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/icons</item>
    </style>
    <style name="MiBotonRaised2" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccentLigth</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="drawer_width">
        <item name="android:layout_width">match_parent</item>
    </style>

    <declare-styleable name="ScrimInsetsView">
        <attr name="insetForeground" format="reference|color" />
    </declare-styleable>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--Spots dialog-->
    <style name="spots" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/spot_title</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">4</item>
    </style>


    <style name="card_inicio">

        <item name="cardBackgroundColor">#B9DAD5</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
        <item name="android:elevation">@dimen/elevarion_card</item>

    </style>

    <style name="card_white">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
    </style>


    <style name="card_iron_ligth">

        <item name="cardBackgroundColor">@color/iron_ligth</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
    </style>

    <style name="card_dark">

        <item name="cardBackgroundColor">@color/colorPrimaryDark</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
    </style>

    <style name="ContentTextInicio">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>




</resources>
